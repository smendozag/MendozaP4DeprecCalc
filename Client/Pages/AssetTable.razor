@code {

    [Parameter] public string Title { get; set; }

    [Parameter]
    public AssetTable aTable { get; set; }

    [Parameter] public EventCallback<int> Selected { get; set; }

    [Parameter] public decimal Result { get; set; }

    [Parameter]
    public Func<int, Values> getValuesFromId { get; set; }

    public IEnumerable<(Values val, int pos)> AssetValues { get; set; }

    protected override void OnParametersSet()
    {
        //AssetTable assets = new AssetTable();
        base.OnParametersSet();
        AssetValues = aTable.Assets.Select((id, pos)
                                => (val: getValuesFromId(id), pos: pos));
        //Result = AssetValues.Select(Tuple => Tuple.val.Result)

    }

}



@if (aTable.AssetValues.Any())
{

    <h3>@Title</h3>
    @foreach(var (val, pos) in AssetValues)
    {

        <ValueItem value="@val"
                   ButtonTitle="Remove"
                   ButtonClass="btn btn-danger"
                   Selected="@(async (_)
                   => await Selected.InvokeAsync(pos))"/>
    }

    <div class="row">
        <div class="col"> Total</div>
        <div class="col"> @Result</div>
        <div class="col"> </div>
    </div>  
}
